.weather-button
  width: 100%
  background-color: transparent
  border: 0
  cursor: pointer
  transition: all .5s ease-in-out;

  .light &
    outline-color: lightText
    color: lightText
    text-shadow: 1px 1px rgba(lightText, .2)

    &:hover
      color: text-light-highlight
      text-shadow: 1px 1px rgba(text-light-highlight, .2)
      background-color: bg-light-highlight

    &:hover .details
      border-color: text-light-highlight

  .dark &
    outline-color: text-dark
    color: text-dark
    text-shadow: 1px 1px rgba(text-dark, .2)

    &:hover
      color: text-dark-highlight
      text-shadow: 1px 1px rgba(text-dark-highlight, .2)
      background-color: bg-dark-highlight

    &:hover .details
      border-color: text-dark-highlight


  h2
    margin-left: 1rem
    transition: transform .3s ease-in-out

  .details
    transition: opacity .3s ease-in-out, border-color .3s ease-out
    opacity: 1
    margin-left: auto
    padding-left: 1rem
    border-left: 2px solid transparent

    .light &
      border-color: text-light

    .dark &
      border-color: text-dark

  .icon
    max-width: 5rem
    margin: 0

  &.open
    h2
      transform: scale(1.1)

    .details
      opacity: 0

    .button-content
      max-width: 600px;

.button-content
  align-items: center
  display: flex;
  max-width: 500px
  margin: 0 auto
  transition: max-width .3s ease-in-out

.ReactCollapse--collapse
  transition: height 500ms
