.weather-tabs
  padding: 2rem 0 0 0
  max-width: 600px
  margin: 0 auto
  display: flex
  flex-flow: row wrap;
  list-style-type: none
  align-items: center
  justify-content: center;

  li
    border-bottom: 2px solid transparent
    padding: 1rem 0
    width: 25%

    @media screen and (max-width: 600px)
      width: 50%



.light .weather-tabs .active
  border-color: dark

.dark .weather-tabs .active
  border-color: white
