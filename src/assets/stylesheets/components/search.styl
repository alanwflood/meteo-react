.search
  display: flex;
  max-width: 800px;
  width: 100%;
  margin: 0 auto;

  button
    z-index: 100

  .search-bar
    width: 100%;
    position: relative;
    padding-bottom: 0px;

  .search-input
    box-sizing: border-box
    font-family: "Montserrat"
    display: block;
    width: 100%;
    padding: .5rem 0 .5rem 15px;

  .search-dropdown
    position: absolute;
    top: 100%;
    background-color: #fff;
    border: 1px solid rgb(85, 85, 85);
    width: 100%;
    z-index: 1000;