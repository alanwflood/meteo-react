{
  "name": "meteo",
  "version": "0.0.1",
  "description": "An app that shows the 5 day forecast for a location",
  "main": "src/index.js",
  "repository": "https://github.com/alanwflood/meteo-react",
  "author": "Alan Flood",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build && serve dist",
    "build": "NODE_ENV=production webpack --config webpack/prod.config.js",
    "dev": "NODE_ENV=development webpack-dashboard -- webpack-dev-server --config webpack/dev.config.js",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "jest --coverage",
    "test:integration": "start-server-and-test 'npm start' 5000 'cypress run --headless'"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.0.0",
    "@testing-library/react-hooks": "^3.2.1",
    "d3": "^5.16.0",
    "date-fns": "^2.12.0",
    "i": "^0.3.6",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "npm": "^6.14.4",
    "react": "^16.13.1",
    "react-collapse": "^5.0.1",
    "react-dom": "^16.13.1",
    "react-motion": "^0.5.2",
    "react-places-autocomplete": "^7.2.1",
    "react-tabs": "^3.1.0",
    "serve": "^11.3.0",
    "tippy.js": "^6.1.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@svgr/webpack": "^5.3.1",
    "@testing-library/react": "^10.0.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "cypress": "^4.6.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.2.6",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^16.13.1",
    "start-server-and-test": "^1.11.0",
    "style-loader": "^1.1.4",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "terser-webpack-plugin": "^3.0.3",
    "url-loader": "^4.1.0",
    "wait-on": "^4.0.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dashboard": "^3.2.0",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "workbox-webpack-plugin": "^5.1.2"
  },
  "lint-staged": {
    "src/**/*.js?(x)": [
      "eslint",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/servicesMock.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/fileMock.js",
      "\\.(css|less|scss|styl)$": "<rootDir>/tests/styleMock.js"
    }
  }
}
